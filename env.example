# Google Sheets via OAuth 2.0 Client ID

# OAuth 2.0 Web Client 
GOOGLE_OAUTH_CLIENT_ID=your-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-oauth-client-secret

# Cloud Console Authorized redirect URI
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

GOOGLE_OAUTH_SCOPES="https://www.googleapis.com/auth/spreadsheets"

GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id

# Optional: Use a fixed refresh token (server-side only; do not commit real values)
GOOGLE_OAUTH_REFRESH_TOKEN=your_refresh_token

NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
